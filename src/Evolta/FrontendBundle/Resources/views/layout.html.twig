{% endblock %}
    
{% block col_left %}

    <h1>{{ menu }}</h1>
    
    {# incluir knb menu #}
    
    <nav class="menu">
        <ul class="bmenu">
            
            {#
            <li{% if menu == "home" %} class="menuactive" {% endif %}>
                <a href="{{ path('staticpage', { 'page': 'homepage'}) }}">{{ 'menu.home' | trans }}</a>
            </li>
