                        </li>
                        <li{% if submenu == "aseguradoras" %} class="menuactive" {% endif %}>
                            <a href="{{ path('staticpage', { 'page': 'aseguradoras'}) }}">{{ 'menu.servicios.aseguradoras' | trans }}</a>
                        </li>
                        <li{% if submenu == "particulares" %} class="menuactive" {% endif %}>
                            <a href="{{ path('staticpage', { 'page': 'particulares'}) }}">{{ 'menu.servicios.particulares' | trans }}</a>
                        </li>
                    </ul>
                {% endif %}
                
            </li>
            <li{% if menu == "presupuestos" %} class="menuactive" {% endif %}>
                <a href="{{ path('staticpage', { 'page': 'presupuestos'}) }}">{{ 'menu.presupuestos' | trans }}</a>
            </li>
            <li{% if menu == "contacto" %} class="menuactive" {% endif %}>
                <a href="{{ path('staticpage', { 'page': 'contacto'}) }}">{{ 'menu.contacto' | trans }}</a>
            </li>
            <li{% if menu == "legal" %} class="menuactive" {% endif %}>
                <a href="{{ path('staticpage', { 'page': 'legal'}) }}">{{ 'menu.legal' | trans }}</a>
            </li>
        </ul>
    </nav>

